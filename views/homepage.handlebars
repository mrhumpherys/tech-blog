{{#each posts}}
<div class='row ml-2 mr-2 mb-2'>
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>
                    <a href="/post/{{id}}" class="text-dark">{{title}}</a>
                </h5>
                <h6>Posted by {{user.username}} on {{format_date created_at}}</h6>
            </div>
            <div class="card-body">
                <p class="card-text">{{content}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}