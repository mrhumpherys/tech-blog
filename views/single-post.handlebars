<div class='row ml-2 mr-2 mb-2'>
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="text-dark">
                    {{post.title}}
                </h5>
                <h6>Posted by {{post.user.username}} on {{format_date post.created_at}}</h6>
            </div>
            <div class="card-body">
                <p class="card-text">{{post.content}}</p>
            </div>
        </div>
    </div>
</div>
{{#each post.comments}}
<div class='row ml-2 mr-2 mb-2'>
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                
            </div>
            <div class="card-body">
                <p class="card-text">{{comment_text}}</p>
                <p class="card-text">-{{user.username}},  {{format_date created_at}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{#if loggedIn}}
<div class='row ml-2 mr-2 mb-2'>
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>Comment</h5>
            </div>
            <div class="card-body">
                <form class="comment-form">
                    <div class="d-flex justify-content-center">
                        <textarea name="comment-body" class="p-1 w-100"></textarea>
                    </div>

                    <div class="d-flex justify-content-center p-1">
                        <button class="btn bg-dark text-light" type="submit">add comment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}